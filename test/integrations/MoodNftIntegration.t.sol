pragma solidity ^0.8.20;

import { Test } from "forge-std/Test.sol";
import { MoodNft } from "../../src/MoodNft.sol";
import { DeployMoodNft } from "../../script/DeployMoodNft.s.sol";
import { console } from "forge-std/console.sol";

contract MoodNftIntegrationTest is Test {
    MoodNft public moodNft;
    DeployMoodNft public deployer;
    address public user = makeAddr("user");
    string public constant HAPPY_SVG_URI =
        "data:image/svg+xml;base64,";
    string public constant SAD_SVG_URI =
        "data:image/svg+xml;base64,";

    function setUp() public {
        deployer = new DeployMoodNft();
        moodNft = deployer.run();
    }

    function testMoodNftIsCorrectlyDeployed() public view {
        assertEq(moodNft.name(), "Mood NFT");
    }

    function testViewTokenURIIntegration() public {
        vm.prank(user);
        moodNft.mintNft();
        console.log(moodNft.tokenURI(0));
    }

    function testFlipTokenToSad() public {
        vm.prank(user);
        moodNft.mintNft();

        // 获取初始 URI（应该是 HAPPY，因为默认情况）
        string memory initialURI = moodNft.tokenURI(0);

        vm.prank(user);
        moodNft.flipMood(0);

        // 获取切换后的 URI
        string memory flippedURI = moodNft.tokenURI(0);

        // 验证两个 URI 不同（表示心情已切换）
        assertTrue(
            keccak256(abi.encodePacked(initialURI)) != keccak256(abi.encodePacked(flippedURI)),
            "URI should change after mood flip"
        );

        // 验证返回的是 JSON 格式的 base64 URI
        string memory expectedPrefix = "data:application/json;base64,";
        bytes memory actualBytes = bytes(flippedURI);
        bytes memory prefixBytes = bytes(expectedPrefix);

        assertTrue(actualBytes.length >= prefixBytes.length, "URI too short");

        for (uint256 i = 0; i < prefixBytes.length; i++) {
            assertEq(actualBytes[i], prefixBytes[i], "Prefix mismatch");
        }
    }
}
